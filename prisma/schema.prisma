generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(uuid())
  email       String     @unique
  password    String
  name        String?
  projects    Project[]
  workspaces  Workspace[]
  modules     Module[]
  createdAt   DateTime   @default(now())
}

model Project {
  id          String     @id @default(uuid())
  name        String
  description String?
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  createdAt   DateTime   @default(now())
}

model Workspace {
  id          String     @id @default(uuid())
  name        String
  description String?
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  modules     Module[]
  createdAt   DateTime   @default(now())
}

model Module {
  id           String     @id @default(uuid())
  name         String
  description  String?
  userId       String
  workspaceId  String
  user         User       @relation(fields: [userId], references: [id])
  workspace    Workspace  @relation(fields: [workspaceId], references: [id])
  createdAt    DateTime   @default(now())
}
